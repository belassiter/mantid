rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Game documents - everyone can read, only Cloud Functions can write
    match /games/{gameId} {
      // Allow anyone to read game state (for spectating and playing)
      allow read: if true;
      
      // Block all direct writes from clients
      // Only Cloud Functions can write to game state
      allow write: if false;
    }
    
    // Block access to all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
